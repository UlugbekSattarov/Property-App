<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigation_menu_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:clipChildren="false"
        android:clipToPadding="false"

        android:elevation="0dp"
        app:cardElevation="0dp"
        app:shapeAppearanceOverlay="@style/MyStyle.ShapeAppearance.NavigationItemView"
        app:shapeAppearance="@style/MyStyle.ShapeAppearance.NavigationItemView"

        app:checkedIcon="@null"

        app:rippleColor="?colorControlHighlightAlt"
        tools:cardBackgroundColor="?colorControlHighlightAlt"

        android:clickable="true"
        android:focusable="true"
        android:checkable="true"

        tools:layout_height="50dp"
        tools:layout_width="280dp"
        tools:context="com.example.marsrealestate.MainActivity"



        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"

        >
        <ImageView
            android:id="@+id/start_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_medium"



            tools:src="@drawable/ic_login"


            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toEndOf="@id/start_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_large"

             android:textAppearance="?textAppearanceNavigationViewItem"

            tools:text="Login"

            />

        <TextView
            android:id="@+id/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"

            android:textAppearance="?textAppearanceNavigationViewItem"


            tools:text="50"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
